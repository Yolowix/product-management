{% extends 'base.html.twig' %}

{% block body %}
    <h1>{{ 'products'|trans }}</h1>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('product_create') }}" class="btn btn-primary">{{ 'add_new_product'|trans }}</a>
    {% endif %}

    <ul>
    {% for product in products %}
        <li>
            <a href="{{ path('product_show', { id: product.id }) }}">{{ product.name }}</a>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('product_edit', { id: product.id }) }}" class="btn btn-warning">{{ 'edit'|trans }}</a>
                <form action="{{ path('product_delete', { id: product.id }) }}" method="post" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('{{ 'confirm_delete'|trans }}');">{{ 'delete'|trans }}</button>
                </form>
            {% endif %}
            {{ product.price }}â‚¬
        </li>
    {% endfor %}
    </ul>

    <a href="{{ path('homepage') }}" class="btn btn-secondary">{{ 'back'|trans }}</a>
{% endblock %}
