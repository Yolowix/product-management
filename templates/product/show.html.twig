{% extends 'base.html.twig' %}

{% block body %}
    <div class="product-details">
        <h1>{{ product.name }}</h1>
        <div class="product-info">
            <p><strong>{{ 'code'|trans }}:</strong> {{ product.code }}</p>
            <p><strong>{{ 'description'|trans }}:</strong> {{ product.description }}</p>
            <p><strong>{{ 'category'|trans }}:</strong> {{ product.category }}</p>
            <p><strong>{{ 'price'|trans }}:</strong> {{ product.price }}â‚¬</p>
            <p><strong>{{ 'quantity'|trans }}:</strong> {{ product.quantity }}</p>
            <p><strong>{{ 'internal_reference'|trans }}:</strong> {{ product.internalReference }}</p>
            <p><strong>{{ 'shell_id'|trans }}:</strong> {{ product.shellId }}</p>
            <p><strong>{{ 'inventory_status'|trans }}:</strong> {{ product.inventoryStatus }}</p>
            <p><strong>{{ 'rating'|trans }}:</strong> {{ product.rating }}</p>
            <p><strong>{{ 'created_at'|trans }}:</strong> {{ product.createdAt|date('Y-m-d H:i') }}</p>
            <p><strong>{{ 'updated_at'|trans }}:</strong> {{ product.updatedAt|date('Y-m-d H:i') }}</p>
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('product_edit', { id: product.id }) }}" class="btn btn-warning">{{ 'edit'|trans }}</a>
    {% endif %}
    <a href="{{ path('product_index') }}" class="btn btn-secondary">{{ 'back_to_list'|trans }}</a>
{% endblock %}
