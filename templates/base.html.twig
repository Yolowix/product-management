<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="/css/styles.css">
    </head>
    <body>
        <nav>
            <div class="logo-container">
                <img src="/images/icon-bar.png" alt="Company Logo" class="logo">
            </div>
            <div class="auth-buttons">
                {% if app.user %}
                    <a href="{{ path('app_logout') }}" class="btn btn-secondary">Logout</a>
                {% else %}
                    <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
                {% endif %}
            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>

        <!-- Boutons de changement de langue -->
        <div class="language-switcher" style="position: fixed; bottom: 10px; right: 10px;">
            <a href="{{ path('change_locale', {'locale': 'en'}) }}" class="btn btn-secondary">English</a>
            <a href="{{ path('change_locale', {'locale': 'fr'}) }}" class="btn btn-secondary">Fran√ßais</a>
        </div>
    </body>
</html>
